    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_weight=".8"-->
    <!--        android:enabled="false"-->
    <!--        android:text="Alcohol" />-->

</LinearLayout>